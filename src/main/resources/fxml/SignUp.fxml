<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox id="vbox" alignment="CENTER_LEFT" prefHeight="570.0" prefWidth="570.0" stylesheets="@styles/style.css"
      xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.bookstore.SignUpController">
    <children>
        <HBox alignment="CENTER">
            <Label fx:id="loginName" alignment="CENTER" prefHeight="44.0"
                   prefWidth="350.0" text="REGISTRATION FORM    " textFill="#7a5465">
                <font>
                    <Font size="25.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="15.0" top="-35.0"/>
                </VBox.margin>
            </Label>
        </HBox>
        <HBox prefHeight="40.0" prefWidth="200.0" styleClass="tf-box">
            <VBox.margin>
                <Insets left="50.0" right="15.0"/>
            </VBox.margin>
            <children>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/icons8-user-50.png"/>
                    </image>
                </ImageView>
                <TextField fx:id="txt_name" prefHeight="40.0" prefWidth="350.0" promptText="Name"/>
            </children>
        </HBox>
        <HBox prefHeight="40.0" prefWidth="200.0" styleClass="tf-box">
            <VBox.margin>
                <Insets left="50.0" right="15.0"/>
            </VBox.margin>
            <children>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/icons8-email-100.png"/>
                    </image>
                </ImageView>
                <TextField fx:id="txt_email" prefHeight="40.0" prefWidth="350.0" promptText="Email"/>
            </children>
        </HBox>
        <HBox prefHeight="40.0" prefWidth="200.0" styleClass="tf-box">
            <VBox.margin>
                <Insets left="50.0" right="15.0"/>
            </VBox.margin>
            <children>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/icons8-password-50.png"/>
                    </image>
                </ImageView>
                <PasswordField fx:id="txt_password" prefHeight="40.0" prefWidth="350.0" promptText="Password"/>
            </children>
        </HBox>
        <HBox prefHeight="40.0" prefWidth="200.0" styleClass="tf-box">
            <VBox.margin>
                <Insets left="50.0" right="15.0"/>
            </VBox.margin>
            <children>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/icons8-address-50.png"/>
                    </image>
                </ImageView>
                <TextField fx:id="txt_address" prefHeight="40.0" prefWidth="350.0" promptText="Address"/>
            </children>
        </HBox>
        <HBox prefHeight="40.0" prefWidth="200.0" styleClass="tf-box">
            <VBox.margin>
                <Insets left="50.0" right="15.0"/>
            </VBox.margin>
            <children>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/icons8-phone-50.png"/>
                    </image>
                </ImageView>
                <TextField fx:id="txt_phone" prefHeight="40.0" prefWidth="350.0" promptText="Phone"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="30" layoutX="25.0" layoutY="272.0" prefHeight="46.0" prefWidth="392.0">
            <VBox.margin>
                <Insets left="25.0" right="25.0" top="20.0"/>
            </VBox.margin>
            <children>
                <JFXButton fx:id="btn_signup" onAction="#handleSubmitButtonAction" prefHeight="47.0" prefWidth="92.0" styleClass="pink-btn"
                           stylesheets="@styles/style.css" text="Sign Up">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </JFXButton>
            </children>
        </HBox>
    </children>
</VBox>
