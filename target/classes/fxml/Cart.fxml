<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.bookstore.CartController"
      prefHeight="400.0" prefWidth="600.0" fillWidth="false" spacing="8.0" stylesheets="@styles/style.css">
    <padding>
        <Insets left="16.0" right="16.0" />
    </padding>
    <children>
        <Label prefWidth="610.0" text="Your Shopping Cart:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <padding>
                <Insets right="8.0" top="8.0" />
            </padding>
        </Label>
        <Separator prefHeight="11.0" prefWidth="610.0">
            <padding>
                <Insets bottom="8.0" />
            </padding>
        </Separator>
        <TableView fx:id="cartTable" prefHeight="300.0" prefWidth="500.0">
            <columns>
                <TableColumn fx:id="titleCol" editable="false" prefWidth="250.0" resizable="false" sortable="false" style="-fx-alignment: center-left;" text="TITLE" />
                <TableColumn fx:id="priceCol" editable="false" prefWidth="100.0" resizable="false" sortable="false" style="-fx-alignment: center;" text="QUANTITY" />
                <TableColumn fx:id="removeCol" editable="false" prefWidth="150.0" resizable="false" sortable="false" text="PRICE" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox spacing="8.0">
            <padding>
                <Insets bottom="8.0" top="8.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#continueShopping" styleClass="my-button" text="Continue Shopping" />
                <Button layoutX="18.0" layoutY="18.0" mnemonicParsing="false" onAction="#proceedToCheckout" styleClass="my-button" text="Checkout" />
                <Pane prefWidth="250.0" HBox.hgrow="ALWAYS" />
                <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Subtotal:">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label fx:id="subtotalLabel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Label">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </children>

</VBox>
